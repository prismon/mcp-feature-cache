# Logging Configuration
# Available levels: fatal, error, warn, info, debug, trace, verbose
LOG_LEVEL=verbose

# Enable file logging (logs will be saved to ./logs directory)
LOG_TO_FILE=true

# Log directory (default: ./logs)
LOG_DIR=./logs

# Maximum log file size (default: 20m)
LOG_MAX_SIZE=20m

# Maximum number of log files to keep (default: 14d)
LOG_MAX_FILES=14d

# Enable JSON format for logs (useful for log aggregation tools)
LOG_JSON=false

# Enable stack traces in error logs
LOG_STACK_TRACE=true

# Enable request context tracking (correlation IDs, request IDs, etc.)
LOG_REQUEST_CONTEXT=true

# Database Configuration
DATABASE_PATH=./data/features.db

# OpenAI Configuration (for embeddings)
# OPENAI_API_KEY=your-api-key-here

# Server Configuration
PORT=8080
HOST=localhost